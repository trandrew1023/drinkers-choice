<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/comment_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        card_view:cardCornerRadius="16dp"
        android:background="#AAAAAA"
        android:layout_marginBottom="4dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/comment_layout_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:text="Poster" />

            <TextView
                android:id="@+id/comment_layout_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/comment_layout_poster"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:text="Date" />

            <TextView
                android:id="@+id/comment_layout_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/comment_layout_poster"
                android:layout_below="@id/comment_layout_poster"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:text="Comment" />
        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>